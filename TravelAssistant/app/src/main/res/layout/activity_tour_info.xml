<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TourInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/tourInfoActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/refreshImageButton"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/refresh_icon"
                android:background="@android:color/transparent"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/avatarOfATour"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/background"
                android:layout_below="@id/refreshImageButton"/>

            <LinearLayout
                android:id="@+id/tourInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/avatarOfATour" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/location_icon"
                        android:layout_marginStart="3dp"/>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:paddingTop="3dp"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/calendar_icon"
                        android:layout_marginStart="3dp"/>

                    <TextView
                        android:id="@+id/tvCalendar"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:paddingTop="3dp"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/people_icon"
                        android:layout_marginStart="3dp"/>

                    <TextView
                        android:id="@+id/tvPeople"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:paddingTop="3dp"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/money_icon"
                        android:layout_marginStart="3dp"/>

                    <TextView
                        android:id="@+id/tvMoney"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:paddingTop="3dp"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/host_icon"
                        android:layout_marginStart="3dp"/>

                    <TextView
                        android:id="@+id/tvHost"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:paddingTop="3dp"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/removeTour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove Tour"
                android:textStyle="italic"
                android:textSize="17sp"
                android:layout_below="@id/tourInfo"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/updateTourInfoClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Tour Info"
                android:textStyle="italic"
                android:textSize="17sp"
                android:layout_below="@id/tourInfo"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/showListStopPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/updateTourInfoClick"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Show List Stop Point"
                android:textSize="23sp"
                android:padding="5dp"
                android:background="@drawable/border_edit_text_rectangle"
                android:textColor="@color/colorOrange"
                android:clickable="true" />

            <TextView
                android:id="@+id/showListMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/showListStopPoint"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Show Members"
                android:textSize="23sp"
                android:padding="5dp"
                android:background="@drawable/border_edit_text_rectangle"
                android:textColor="@color/colorOrange"
                android:clickable="true"/>

            <LinearLayout
                android:id="@+id/functionField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/showListMember"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/reviewImageButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/review_icon"
                        android:background="@drawable/circle_image_button"
                        android:visibility="visible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/commentImageButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/comment_icon"
                        android:background="@drawable/circle_image_button"
                        android:visibility="visible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/followImageButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/follow_icon"
                        android:background="@drawable/circle_image_button"
                        android:visibility="visible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/chatImageButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/chat_icon"
                        android:background="@drawable/circle_image_button"
                        android:visibility="visible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/audioImageButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/audio_icon"
                        android:background="@drawable/circle_image_button"
                        android:visibility="visible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/inviteImageButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/add_member_icon"
                        android:background="@drawable/circle_image_button"
                        android:visibility="visible"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/joinTourField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/functionField"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/tvJoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Have already joined"
                    android:textSize="20sp"
                    android:textColor="@color/quantum_orange"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/joinTourButton"
                    android:layout_marginRight="20dp" />

                <Button
                    android:id="@+id/joinTourButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join"
                    android:textSize="20sp"
                    android:textColor="@color/quantum_white_100"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/border_button"
                    android:layout_marginRight="10dp"
                    android:visibility="invisible"/>

            </RelativeLayout>
            
            <RatingBar
                android:id="@+id/ratingStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:saveEnabled="true"
                android:layout_below="@id/joinTourField"
                android:layout_centerHorizontal="true"
                style="@style/CustomRatingBar"
                android:isIndicator="true"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvListReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingStar"
                android:layout_margin="7dp"/>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/commentActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tour_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tour Name"
            android:textSize="20sp"
            android:textColor="@color/colorGray"
            android:layout_centerHorizontal="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/show_list_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tour_name_title"
            android:layout_above="@id/comment_input_box"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/comment_input_box"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/comment_send_button"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="20sp"
            android:background="@drawable/border_rectangle_edit_text"
            android:inputType="text" />
        <Button
            android:id="@+id/comment_send_button"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/border_button"
            android:textColor="#FFFFFF"
            android:text="Send" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reviewActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/reviewTourActivityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Tour"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <RatingBar
            android:id="@+id/ratingFieldReviewActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reviewTourActivityTitle"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:numStars="5"
            style="@style/CustomRatingBar" />

        <LinearLayout
            android:id="@+id/inputReviewField"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/ratingFieldReviewActivity"
            android:background="@drawable/border_edit_text"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp">
        <EditText
            android:id="@+id/inputReviewBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>
        </LinearLayout>

        <Button
            android:id="@+id/sendReviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_button"
            android:text="send review"
            android:textColor="@color/colorWhite"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_below="@id/inputReviewField"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/updateTourInfoActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/updateTourInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Tour Info"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tourNameLabelUpdateInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tour_name_label"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorGray"
                android:layout_marginTop="10dp"
                android:layout_below="@id/updateTourInfoTitle"/>

            <EditText
                android:id="@+id/inputTourNameForUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tourNameLabelUpdateInfo"
                android:background="@drawable/border_edit_text"
                android:textSize="20sp"
                android:inputType="text"
                android:padding="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:id="@+id/startDateUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/inputTourNameForUpdate">
                <RelativeLayout
                    android:id="@+id/startDateFieldUpdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp">
                    <TextView
                        android:id="@+id/startDateLabelUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_date_label"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorGray" />
                    <EditText
                        android:id="@+id/inputStaDateUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/startDateLabelUpdate"
                        android:background="@drawable/border_edit_text_rectangle"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:inputType="datetime"
                        android:padding="10sp"
                        android:hint="@string/select_date_hint"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:enabled="false"/>
                    <ImageButton
                        android:id="@+id/startDateSelectUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/calendar_icon"
                        android:layout_toEndOf="@id/inputStaDateUpdate"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="4dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp">
                    <TextView
                        android:id="@+id/endDayLabelUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_day_label"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorGray" />
                    <EditText
                        android:id="@+id/inputEndDateUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/endDayLabelUpdate"
                        android:background="@drawable/border_edit_text_rectangle"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:inputType="datetime"
                        android:padding="10sp"
                        android:hint="@string/select_date_hint"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:enabled="false"/>
                    <ImageButton
                        android:id="@+id/EndDateSelectUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/calendar_icon"
                        android:layout_toEndOf="@id/inputEndDateUpdate"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="4dp"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/startPlaceLabelUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_place_label"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorGray"
                android:layout_below="@id/startDateUpdate" />

            <TextView
                android:id="@+id/inputStartPlaceUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/startPlaceLabelUpdate"
                android:background="@drawable/border_edit_text"
                android:textSize="20sp"
                android:padding="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/endPlaceLabelUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/end_place_label"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorGray"
                android:layout_below="@id/inputStartPlaceUpdate" />

            <TextView
                android:id="@+id/inputEndPlaceUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/endPlaceLabelUpdate"
                android:background="@drawable/border_edit_text"
                android:textSize="20sp"
                android:padding="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:maxLines="1"/>

            <Button
                android:id="@+id/choosePlaceButtonUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/inputEndPlaceUpdate"
                android:text="@string/hint_to_select_start_end_place"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:background="@drawable/border_button"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@mipmap/map_icon8"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

            <LinearLayout
                android:id="@+id/adultsChildrenUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/choosePlaceButtonUpdate">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp">
                    <TextView
                        android:id="@+id/adultsLabelUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/adults_label"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorGray" />

                    <EditText
                        android:id="@+id/inputAdultsUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/adultsLabelUpdate"
                        android:inputType="number"
                        android:background="@drawable/border_edit_text"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp">
                    <TextView
                        android:id="@+id/childrenLabelUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/children_label"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorGray" />

                    <EditText
                        android:id="@+id/inputChildrenUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/childrenLabelUpdate"
                        android:inputType="number"
                        android:background="@drawable/border_edit_text"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/minMaxCostUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/adultsChildrenUpdate">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp">
                    <TextView
                        android:id="@+id/minCostLabelUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/min_cost_label"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorGray" />


                    <EditText
                        android:id="@+id/inputMinCostUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/minCostLabelUpdate"
                        android:inputType="number"
                        android:background="@drawable/border_edit_text"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp">
                    <TextView
                        android:id="@+id/maxCostLabelUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/max_cost_label"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorGray" />

                    <EditText
                        android:id="@+id/inputMaxCostUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/maxCostLabelUpdate"
                        android:inputType="number"
                        android:background="@drawable/border_edit_text"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/selectStatusTourLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorGray"
                android:layout_below="@+id/minMaxCostUpdate"/>

            <Spinner
                android:id="@+id/selectStatusTour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/selectStatusTourLabel"
                android:layout_marginTop="5dp" />

            <RadioButton
                android:id="@+id/privateTripButtonUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/radio_button_create_tour"
                android:layout_below="@id/selectStatusTour"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorGray"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/updateInfoTourButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/privateTripButtonUpdate"
                android:text="Update"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:background="@drawable/border_button"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>