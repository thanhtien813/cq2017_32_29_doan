<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/border_tour_item">

    <ImageView
        android:id="@+id/ivTourImg"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:weightSum="10">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:src="@drawable/location_icon"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_weight="5.7"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:paddingTop="3dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:text="@string/IdTitle"/>

        <TextView
            android:id="@+id/tvTourId"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:weightSum="10">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:src="@drawable/calendar_icon"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:id="@+id/tvCalendar"
            android:layout_weight="9.3"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:paddingTop="3dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:weightSum="10">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:src="@drawable/people_group_icon"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:id="@+id/tvAdults"
            android:layout_width="0dp"
            android:layout_weight="9.7"
            android:layout_height="25dp"
            android:paddingTop="3dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:weightSum="10">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:src="@drawable/money_icon"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="0dp"
            android:layout_weight="9.7"
            android:layout_height="25dp"
            android:paddingTop="3dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</LinearLayout>